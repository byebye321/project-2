<h1>Posts</h1>

<% if user_logged_in? %>
<h3>Welcome, <%= current_user.email %></h3>
  <%= link_to 'New Post', new_user_post_path(current_user) %>
  <%= link_to "Sign Out", sign_out_path, method: :delete %>
<% else %>
  <% if !(current_page?(sign_in_path)) %>
   <%= link_to "Sign In", sign_in_path %>
  <% end %>
  <% if !(current_page?(sign_up_path)) %>
   <%= link_to "Sign Up", sign_up_path %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class= "posts">
    <% @posts.each do |post| %>
      <tr class= "post">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', user_post_path(post.user_id, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user_id, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(post.user_id, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
